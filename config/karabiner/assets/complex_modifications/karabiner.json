{
    "title": "My custom karibiner rules for advantage 2",
    "rules": [
        {
            "description": "Open Brave Window",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "return_or_enter",
                        "modifiers": {
                            "mandatory": [
                                "left_shift",
                                "left_control",
                                "left_alt"
                            ]
                        }
                    },
                    "to": [
                        {
                            "shell_command": "open -na 'Brave Browser.app'"
                        }
                    ]
                }
            ]
        },
        {
            "description": "Open iTerm Window",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "spacebar",
                        "modifiers": {
                            "mandatory": [
                                "left_shift",
                                "left_control",
                                "left_alt"
                            ]
                        }
                    },
                    "to": [
                        {
                            "shell_command": "open -na 'iTerm.app'"
                        }
                    ]
                }
            ]
        },
        {
            "description":
                "Post escape if caps is pressed alone, left_ctrl otherwise",
            "manipulators": [
                {
                    "from": {
                        "key_code": "caps_lock",
                        "modifiers": {
                            "optional": ["any"]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_control"
                        }
                    ],
                    "to_if_alone": [
                        {
                            "key_code": "escape"
                        }
                    ],
                    "type": "basic"
                }
            ]
        },
        {
            "description":
                "Change home key to alt + shift when held",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "home",
                        "modifiers": {
                            "optional": ["any"]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_alt",
                            "modifiers": ["left_shift"]
                        }
                    ]
                }
            ]
        },
        {
            "description":
                "Change end key to ctrl + alt + cmd when held",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "end",
                        "modifiers": {
                            "optional": ["any"]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_control",
                            "modifiers": ["left_alt", "left_command"]
                        }
                    ]
                }
            ]
        },
        {
            "description":
                "Change page_up key to ctrl + alt + cmd when held",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "page_up",
                        "modifiers": {
                            "optional": ["any"]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_control",
                            "modifiers": ["left_alt", "left_command"]
                        }
                    ]
                }
            ]
        },
        {
            "description":
                "Change page_down key to alt + shift when held",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "page_down",
                        "modifiers": {
                            "optional": ["any"]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_alt",
                            "modifiers": ["left_shift"]
                        }
                    ]
                }
            ]
        },
        {
            "description": "Change the left arrow to command when held",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "right_command",
                        "modifiers": {
                            "optional": ["any"]
                        }
                    },
                    "to": [
                        {
                            "key_code": "right_command"
                        }
                    ],
                    "to_if_alone": [
                        {
                            "key_code": "left_arrow"
                        }
                    ]
                }
            ]
        },
        {
            "description": "Better Shifting: Parentheses on shift keys",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "left_shift"
                    },
                    "to": [
                        {
                            "key_code": "left_shift"
                        }
                    ],
                    "to_if_alone": [
                        {
                            "key_code": "9",
                            "modifiers": ["left_shift"]
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "right_shift"
                    },
                    "to": [
                        {
                            "key_code": "right_shift"
                        }
                    ],
                    "to_if_alone": [
                        {
                            "key_code": "0",
                            "modifiers": ["right_shift"]
                        }
                    ]
                }
            ]
        }
    ]
}
